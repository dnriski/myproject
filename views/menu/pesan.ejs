<section id="contact" class="contact mb-5 content2 mt-5">
  <div class="container">
    <div class="row pt-5 mb-4">
      <div class="col text-center">
        <h2 class="judul">Contact Us</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="col">
          <div class="card text-white bg-primary mb-3">
            <div class="card-body text-center">
              <h5 class="card-title bg-light">Contact Us</h5>
              <p class="card-text">
                Kamu punya keluhan? silahkan hubungi kami ya atau bisa kunjungi
                office kami
                <i class="bi bi-emoji-wink-fill" style="color: yellow"></i>
              </p>
            </div>
          </div>
          <div class="card">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><h1>Location</h1></li>
              <li class="list-group-item">My Office</li>
              <li class="list-group-item">Jl.Sudirman no.17 gang Melati</li>
              <li class="list-group-item">Jakarta, Indonesia</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
        <% }%>

        <form method="" action="/">
          <div class="form-group">
            <label for="nama">Nama</label>
            <input
              type="text"
              name="nama"
              class="form-control"
              id="nama"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="text"
              name="email"
              class="form-control"
              id="email"
              required
            />
          </div>
          <div class="form-group">
            <label for="pesan">Pesan</label>
            <textarea
              name="pesan"
              class="form-control"
              id="pesan"
              name="pesan"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <button type="" class="btn btn-primary">Kirim</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
